package com.esb.saml.migration.dao.cmt;

import java.util.List;

import com.esb.saml.common.entity.staticenum.AlertType;
import com.esb.saml.db.cmt.AlertHitBo;
import com.esb.saml.db.cmt.CusAlertAggregationBo;
import com.esb.saml.db.cmt.CusAlertBo;
import com.esb.saml.db.cmt.CusCountryDetailBo;
import com.esb.saml.db.cmt.ReductionHashBo;

public interface MgrAlertManagementDao {
	 /**
	 * 取得牌卡均為false hit的cusAlertSeqNo
	 * @remark
	 */
    List<Long> queryAlertAggregationSeqNo();
    
    /**
   	 * 取得牌卡均為false hit的cusAlertSeqNo
   	 * @remark
   	 */
    List<Long> queryCusAlertSeqNo(Long cusAlertAggSeqNo);
    
    /**
     * 更新False Hit自動關單相關資料
     * @param alertSeqNo 警示流水號
     * @param status 案件狀態
     * @param reviewStatus 審查狀態
     * @remark
     */
    void changeMsgAlertStatus(Long alertSeqNo, String status, String reviewStatus);
    
    /**
     * 取得顧客掃描警示案件資料
     * @param alertSeqNo 警示流水號
     * @return 顧客掃描警示案件資料
     * @remark
     */
    List<CusAlertBo> queryCusAlertByAlertAggSeqNo(Long alertSeqNo);
    
    /**
     * 
     * @param alertSeqNo
     * @return
     * @remark
     */
    CusAlertAggregationBo queryCusAlertAggByAlertAggSeqNo(Long alertSeqNo);
    
    /**
     * 查詢警示案件命中資訊
     * @param alertSeqNo 警示流水號
     * @param alertType 警示類型
     * @return 警示案件命中資訊
     * @remark
     */
    List<AlertHitBo> queryAlertHit(Long alertSeqNo, AlertType alertType, String orderCondition);
    
    /**
     * 取得顧客掃描警示案件國家資料
     * @param alertSeqNo 警示流水號
     * @return 顧客掃描警示案件國家資料
     * @remark
     */
    List<CusCountryDetailBo> queryCusCountryDetailByAlertSeqNo(Long alertSeqNo);
    
    
    /**
     * 新增一筆 Reduction Hash
     * @param reductionHashBo
     * @remark
     */
    void insertReductionHash(List<ReductionHashBo> boList);
}
